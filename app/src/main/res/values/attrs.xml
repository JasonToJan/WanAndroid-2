<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorNormalText" format="reference|color" />
    <attr name="colorPrimaryLight" format="reference|color" />

    <declare-styleable name="CircleView">
        <attr name="bgColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CirclePagerIndicator">
        <attr name="normalDotColor" format="color"></attr>
        <attr name="focusedDotColor" format="color"></attr>
        <attr name="normalDotRadius" format="dimension"></attr>
        <attr name="focusedDotRadius" format="dimension"></attr>
        <attr name="dotSpace" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="BannerView">
        <attr name="loop" format="boolean" />
        <attr name="duration" format="integer" />
        <attr name="pagerScrollDuration" format="integer" />
        <attr name="showIndicator" format="boolean" />
    </declare-styleable>
</resources>